<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/moneda"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_monetization"
                android:background="@color/colorAccent"

                />

            <TextView
                android:id="@+id/title_alert_pago"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/confirmacion"
                style="@style/Base.TextAppearance.AppCompat.Title.Inverse"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:layout_toRightOf="@+id/moneda"
                android:textSize="@dimen/titulo_template"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/moneda"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>